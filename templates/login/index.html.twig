{% extends 'base.html.twig' %}

{% block title %}
{% trans %}controller.login.title{% endtrans %}
{% endblock %}

{% block body %}
<div class="d-flex justify-content-center container mt-5">
    <form class="p-3 border" action="{{ path('app_login_check') }}" method="post" style="max-width: 300px;">
        <h1 class="h3 mb-3 fw-normal">
            {% trans %}controller.login.title{% endtrans %}
        </h1>
        <div class="form-floating mb-2">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="_username"
                value="{{ last_username }}">
            <label for="floatingInput">
                {% trans %}controller.login.email{% endtrans %}
            </label>
        </div>
        <div class="form-floating mb-2">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="_password">
            <label for="floatingPassword">
                {% trans %}controller.login.password{% endtrans %}
            </label>
        </div>

        {% if error %}
        <div class="mb-2" style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <input type="hidden" name="_target_path" value="/employee">

        <button class="btn btn-primary w-100" type="submit">
            {% trans %}controller.login.login{% endtrans %}
        </button>
    </form>
</div>
{% endblock %}
